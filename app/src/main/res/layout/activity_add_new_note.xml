<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/titleForAddingNewNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textColor="#2d2d2d"
        android:text="@string/tittleForAddingNewNote"
        tools:ignore="NestedWeights"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/newNote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:maxLength="140"
        android:inputType="textMultiLine"
        android:textColor="#4c4c4c"
        android:hint="@string/hint"
        android:layout_weight="1"
        tools:ignore="Autofill,LabelFor" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClickSave"
            android:layout_margin="10dp"
            android:id="@+id/buttonForAddingNewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/btnForSave"
            android:visibility="visible"
            android:background="#2d2d2d"
            android:textColor="#ffffff"
            tools:ignore="ButtonStyle" />

        <Button
            android:onClick="onClickExit"
            android:layout_margin="10dp"
            android:id="@+id/buttonExitFromAddingNewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/btnForExit"
            android:visibility="visible"
            android:background="#2d2d2d"
            android:textColor="#ffffff"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>